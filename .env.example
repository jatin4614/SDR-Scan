# RF Spectrum Monitor - Environment Configuration

# Database
DATABASE_URL=sqlite:///./data/database/spectrum.db

# API Server
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# GPS Configuration
GPS_MODE=manual
# Options: manual, gpsd, mock
GPSD_HOST=localhost
GPSD_PORT=2947

# SDR Defaults
DEFAULT_SAMPLE_RATE=2400000
DEFAULT_GAIN=20
DEFAULT_INTEGRATION_TIME=0.1

# Export
EXPORT_DIRECTORY=./data/exports

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/spectrum_monitor.log
