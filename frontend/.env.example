# RF Spectrum Monitor - Frontend Environment Configuration
# Copy this file to .env.local for local development

# API Configuration
# URL for the backend API (proxied in development, direct in production)
VITE_API_URL=/api

# WebSocket URL (auto-detected if not set)
# VITE_WS_URL=ws://localhost:8000/ws

# Application Settings
VITE_APP_NAME=RF Spectrum Monitor
VITE_APP_VERSION=1.0.0

# Map Configuration
# Default map center (latitude, longitude)
VITE_MAP_DEFAULT_LAT=40.7128
VITE_MAP_DEFAULT_LNG=-74.0060
VITE_MAP_DEFAULT_ZOOM=10

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=false

# Analytics (optional)
# VITE_ANALYTICS_ID=

# Sentry Error Tracking (optional)
# VITE_SENTRY_DSN=
