# RF Spectrum Monitor - Backend Environment Configuration
# Copy this file to .env for local development

# Database
DATABASE_URL=sqlite:///./data/database/spectrum.db

# API Server
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# Celery Task Queue (optional - for background jobs)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# GPS Configuration
# Options: manual, gpsd, mock
GPS_MODE=mock
GPSD_HOST=localhost
GPSD_PORT=2947

# Default GPS location (used for mock mode)
DEFAULT_LATITUDE=40.7128
DEFAULT_LONGITUDE=-74.0060

# SDR Configuration
DEFAULT_SAMPLE_RATE=2400000
DEFAULT_GAIN=20
DEFAULT_INTEGRATION_TIME=0.1

# Export Settings
EXPORT_DIR=./data/exports
MAX_EXPORT_ROWS=100000

# Security (production only)
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=your-domain.com

# Feature Flags
ENABLE_MOCK_SDR=true
ENABLE_CELERY=false
